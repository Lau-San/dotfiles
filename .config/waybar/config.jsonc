// -*- mode: jsonc -*-
{
    "layer": "bottom",
    "position": "top",
    "height": 40,
    // "width": 1280,
    "spacing": 8,
    "margin": "10 10 0 10",
    "reload_style_on_change": true,

    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "mpris",
        "cava",
        "tray",
        "group/control",
        "group/monitor",
        "group/power"
    ],

    "group/control": {
        "orientation": "inherit",
        "modules": [
            "idle_inhibitor",
            "group/volume"
        ]
    },
    "group/monitor": {
        "orientation": "inherit",
        "modules": [
            "cpu",
            "memory"
        ]
    },
    "group/power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        },
        "modules": [
            "custom/power",
            "custom/reboot",
            "custom/logout",
            "custom/hypr-reload"
        ]
    },
    "group/music": {
        "orientation": "inherit",
        "modules": [
            "mpris",
            "cava"
        ]
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÑë",
            "default": "ÔÜí",
            "empty": "ÔÑë"
        }
    },
    "hyprland/window": {
        "format": "{class}",
        "separate-outputs": true,
        "icon": true
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<tt>{calendar}</tt>",
        "format": "{:%I:%M %p}",
        "locale": "en_GB.UTF-8",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-click-right": "mode",
            "format": {
                "months": "<span font='Victor Mono 14' color='#4ED3BB'><b>{}</b></span>",
                "weekdays": "<span font='Victor Mono 14' color='#65BCFF'><b>{}</b></span>",
                "days": "<span font='Victor Mono 14'><b>{}</b></span>",
                "today": "<span background='#BB9AF7' color='#BB9AF7' bgalpha='20%'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode"
        }
    },
    "cpu": {
        "interval": 1,
        "format": "{icon}",
        "rotate": 270,
        "format-icons": [
            "<span color='#65BCFF'>Û∞ù¶</span>",
            "<span color='#4ED3BB'>Û∞™û</span>",
            "<span color='#C3E88D'>Û∞™ü</span>",
            "<span color='#ffffa5'>Û∞™†</span>",
            "<span color='#ffffa5'>Û∞™°</span>",
            "<span color='#E0AF68'>Û∞™¢</span>",
            "<span color='#FF966C'>Û∞™£</span>",
            "<span color='#C53B53'>Û∞™•</span>"
        ],
        "max-length": 10
    },
    // "memory": {
    //     "format": "{}% ÔÉâ"
    // },
    "memory": {
        "interval": 1,
        "rotate": 270,
        "format": "{icon}",
        "format-icons": [
            "<span color='#65BCFF'>Û∞ù¶</span>",
            "<span color='#4ED3BB'>Û∞™û</span>",
            "<span color='#C3E88D'>Û∞™ü</span>",
            "<span color='#ffffa5'>Û∞™†</span>",
            "<span color='#ffffa5'>Û∞™°</span>",
            "<span color='#E0AF68'>Û∞™¢</span>",
            "<span color='#FF966C'>Û∞™£</span>",
            "<span color='#C53B53'>Û∞™•</span>"
        ],
        "max-length": 10
    },
    // "cpu": {
    //     "interval": 1,
    //     "format": "{icon}",
    //     "rotate": 270,
    //     "format-icons": ["Û∞ù¶","Û∞™û","Û∞™ü","Û∞™†","Û∞™°","Û∞™¢","Û∞™£","Û∞™§","Û∞™•"],
    // },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-full": "{icon}",
        "format-charging": "Ôóß",
        "format-plugged": "Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "group/volume": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        },
        "modules": ["pulseaudio", "pulseaudio/slider"]
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": " {icon}",
        "format-muted": "Ôö© ",
        // "format-icons": {
        //     "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        // },
        "format-icons": {
            "default": ["ÔÄ®"]
        },
        "on-click": "pavucontrol-qt"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": "‚èª ",
        "tooltip": false
    },
    "custom/reboot": {
        "format": "ÔÄû ",
        "tooltip": false
    },
    "custom/logout": {
        "format": "ÔÇã ",
        "tooltip": false
    },
    "custom/hypr-reload": {
        "format": "Ôë™ ",
        "tooltip": false
    },
    "mpris": {
        "format-playing": "<span font='Mononoki Nerd Font 14' color='#4ED3BB'>{status_icon}</span> {artist} - {title}",
        "format-paused": "<span font='Mononoki Nerd Font 14' color='#4ED3BB'>{status_icon}</span> {artist} - {title}",
        "format-stopped": "<span font='Mononoki Nerd Font 14' color='#4ED3BB'>{status_icon}</span> Nothing playing",
        "status-icons": {
            "playing": "ÔÅå ",
            "paused": "ÔÅã ",
            "stopped": "ÔÄÅ "
        },
        "ignored-players": ["firefox"]
    },
    "cava": {
        // "cava_config": "~/.config/cava/config",
        "framerate": 60,
        "autosens": 1,
        // "sensitivity": 10,
        "bars": 10,
        // "lower_cutoff_freq": 50,
        // "higher_cutoff_freq": 10000,
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "sleep_timer": 10,
        "hide_on_silence": true,
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    }
}
